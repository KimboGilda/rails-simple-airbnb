<div id="container-form">
<h1>Add a new Flat</h1>
<div class="form_add">
<%= form_with model: @flat do |f|%>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
  <%= f.label :address, "Address" %>
  <%= f.text_field :address %>
  <%= f.label :description, "Description" %>
  <%= f.text_field :description %>
  <%= f.label :number_of_guests, "Number of guests" %>
  <%= f.number_field :number_of_guests %>
  <%= f.label :price_per_night, "Price per night" %>
  <%= f.number_field :price_per_night %>
  <%= f.submit "Create Flat"%>
  </div>
<% end %>
</div>
</div>